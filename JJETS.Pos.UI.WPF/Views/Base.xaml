<UserControl x:Class="JJETS.Pos.UI.WPF.Views.Base"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JJETS.Pos.UI.WPF.Views"
             xmlns:models="clr-namespace:JJETS;assembly=JJETS.Pos.Models"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="150">
    <StackPanel DataContext="{Binding BaseModel}">
        <local:CircleImage x:Name="ImageCircle" Width="150" Height="150"/>
        <Viewbox  StretchDirection="DownOnly">
            <Label Content="Bean" FontSize="20" HorizontalAlignment="Center"/>
        </Viewbox>
        <Viewbox  StretchDirection="DownOnly">
            <Label Content="Created On: 10/10/16" HorizontalAlignment="Center"/>
        </Viewbox>
        <Viewbox  StretchDirection="DownOnly">
            <Label Content="Created By: Bean" HorizontalAlignment="Center"/>
        </Viewbox>
        <Viewbox  StretchDirection="DownOnly">
            <Label Content="Description" Height="Auto" HorizontalAlignment="Center"/>
        </Viewbox>
        <Button> Edit </Button>
        <Button>Subscribe</Button>
    </StackPanel>
</UserControl>
