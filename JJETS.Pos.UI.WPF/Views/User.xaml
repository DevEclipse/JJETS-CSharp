<UserControl x:Class="JJETS.Pos.UI.WPF.Views.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JJETS.Pos.UI.WPF.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             Width="500" Height="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="37*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:Base Grid.RowSpan="2"></local:Base>
        <GroupBox Grid.Column="1" Header="User Info">
            <GroupItem>
                <StackPanel>
                    <Label >Balance</Label>
                    <Label >Contact No</Label>
                </StackPanel>
            </GroupItem>
        </GroupBox>
        <ContentControl Grid.Column="1" Grid.Row="1" x:Name="UserControlContent">
            <local:EmployeeControl></local:EmployeeControl>
        </ContentControl>

    </Grid>
</UserControl>
